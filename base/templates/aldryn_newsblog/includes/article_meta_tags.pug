// Search Engine
meta(name='description', content='{{article.meta_description}}')
meta(name='image', content='{{article.featured_image.url}}')
meta(name='keywords', content='{{article.meta_keywords}}')
// Schema.org for Google
meta(itemprop='name', content='{{article.meta_title}}')
meta(itemprop='description', content='article.meta_description')
meta(itemprop='image', content='{{article.featured_image.url}}')
// Twitter
meta(name='twitter:card', content="summary_large_image")
meta(name='twitter:title', content='{{article.meta_title}}')
meta(name='twitter:site', content="@GobiernodeChile")
meta(name='twitter:description', content='{{article.meta_description}}')
meta(name='twitter:image', content='{{article.featured_image.url}}')

// Open Graph general (Facebook, Pinterest & Google+)
meta(property='og:title', content='{{article.meta_title}}')
meta(property='og:description', content='{{article.meta_description}}')
meta(property='og:image', content="{{ article.featured_image.url }}")
meta(property='og:image:width', content="{{ article.featured_image.width }}")
meta(property='og:image:height', content="{{ article.featured_image.height }}")
meta(property='og:url', content='{{ request.scheme }}://{{ request.get_host }}{{article.get_absolute_url}}')
meta(property='og:locale', content='{{request.LANGUAGE_CODE}}')
