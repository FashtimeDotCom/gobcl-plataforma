
- load i18n

if is_paginated
  if page_obj.has_previous
    a(href="?page={{ page_obj.previous_page_number  }}", aria-label="{% trans 'Previous' %}").button
      i.fa.fa-angle-left
      span {% trans 'Previous' %}
  if page_obj.has_next
    a(href="?page={{ page_obj.next_page_number }}", aria-label="{% trans 'Next' %}").button
      span {% trans 'Next' %}
      i.fa.fa-angle-right
