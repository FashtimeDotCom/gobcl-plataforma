- load i18n staticfiles thumbnail cms_tags apphooks_config_tags

block content
  main.site-main
    section.section.nopadding.bg-bluedark
      .container
        {% with article=article_list.first %}
        article.article-hero.article--dark.text-light
          .row
            .col-sm-12.col-md-12.col-lg-6.col-xl-5.order-md-12
              {% include 'includes/toolbar.pug' %}
            .col-sm-12.col-md-12.col-lg-6.col-xl-7
              h1.heading-large Noticias
          .row
            .col-sm-12.col-md-12.col-lg-6.col-xl-5
              p
                // The image is only shown on the detail view by using the condition "and detail_view"
                if article.featured_image_id
                  img.article-hero_img.img-fluid.w-100(
                    src="{% thumbnail article.featured_image 800x450 crop subject_location=article.featured_image.subject_location %}",
                    alt="{{ article.featured_image.alt }}"
                  )
                else
                  img.article-hero_img.img-fluid.w-100(
                    src="http://e-gob.github.io/gob.cl/sitio/images/temp/new-hero.jpg", 
                    alt="{{ article.featured_image.alt }}"
                  )
            .col-sm-12.col-md-12.col-lg-6.col-xl-6
              time.article-hero_date
                {{ article.publishing_date|date }}
              h2.article-hero_main-title
                a(href="noticia.html")
                  {% render_model article "title" %}

              p 
                {% render_model article "lead_in" %}
              a(href="noticia.html").text-red Ver noticia completa
        {% endwith %}

    section.section
      .container
        h2.heading-label Filtrar por Temas:
        .tags.overflowed-xs
          .tags_content
            .tags_item: a(href="#").ctag.ctag--light Todas
            .tags_item: a(href="#").ctag.ctag--light Salud
            .tags_item: a(href="#").ctag.ctag--light Seguridad
            .tags_item: a(href="#").ctag.ctag--light Economía y empleo
            .tags_item: a(href="#").ctag.ctag--light Calidad de vida y ciudad

        .row
          each article in article_list
            .col-sm-12.col-md-12.col-lg-6.col-xl-6
              article.new.new--mobile
                time.new_date 
                  {{ article.publishing_date|date }}
                figure.new_figure-mobile
                  if article.featured_image_id
                    img.img-responsive(
                      src="{% thumbnail article.featured_image 800x450 crop subject_location=article.featured_image.subject_location %}",
                      alt="{{ article.featured_image.alt }}"
                    )
                  else
                    img(
                      src="http://e-gob.github.io/gob.cl/sitio/images/temp/new-3.jpg",
                      alt="{{ article.featured_image.alt }}"
                    ).img-responsive
                h2.new_title: a(href="noticia.html").link.link--text-dark.visited 
                  {% render_model article "title" %}

          .col-sm-12.col-md-12.col-lg-4.offset-lg-4.col-xl-4.offset-xl-4.d-none.d-sm-block.text-center
            br
            a(href="#").button.button--block Cargar más
    section
      .container
        {% include 'includes/social.pug' %}

{% include "aldryn_newsblog/includes/pagination.html" %}
