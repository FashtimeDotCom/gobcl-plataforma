- load i18n

.section-social
  .row.align-items-center
    .col-sm-12.col-md-12.col-lg-3.col-xl-4
      p.section-social_label {% trans 'Follow us on our social media:' %}
    .col-sm-12.col-md-12.col-lg-9.col-xl-8
      .row.align-items-center
        .col-sm-12.col-md-3.col-lg-3
          .social
            a(href="https://www.facebook.com/gobiernodechile", target="blank").social_link
            span.social_icon
              i.ic-facebook
            span.social_name Facebook
            span.social_url /gobiernodechile
        .col-sm-12.col-md-3.col-lg-3
          .social
            a(href="https://twitter.com/gobiernodechile", target="blank").social_link
            span.social_icon
              i.ic-twitter
            span.social_name Twitter
            span.social_url @Gobiernodechile
        .col-sm-12.col-md-3.col-lg-3
          .social
            a(href="https://www.instagram.com/gobiernodechile/", target="blank").social_link
            span.social_icon
              i.ic-instagram
            span.social_name Instagram
            span.social_url /gobiernodechile
        .col-sm-12.col-md-3.col-lg-3
          .social
            a(href="https://www.youtube.com/user/LAMONEDA", target="blank").social_link
            span.social_icon
              i.ic-youtube
            span.social_name Youtube
            span.social_url Lamoneda