- load i18n
- load menu_tags
- load apphooks_config_tags

nav.navbar.navbar-expand-md.navbar-light.fixed-top.bg-white
  .container
    a.navbar-brand.align-self-start(href="{% url 'home' %} ")
      i.icon-gob
    .content
      .dropdown.d-inline-block.d-md-none
        a#ropdownMenuLang.btn.btn-seconday.dropdown-toggle(
          href="#",
          data-toggle="dropdown",
          role="button",
          aira-haspopup="true",
          aria-expanded="false"
        )
          i.fa.fa-language.mr-1(aria-hidden="true")
          - get_current_language as current_language
          {{ current_language }}
        .dropdown-menu(aria-labelledby="ropdownMenuLang")
          {% language_chooser "includes/menu_language.pug" %}
      a.btn-search.btn-search--mobile.toggle-search(href="#")
        i.ic-search.btn-search_icon
        i.ic-close.btn-search_icon

      button.navbar-toggler(
        type="button",
        data-toggle="collapse",
        data-target="#navbarSupportedContent",
        aria-controls="navbarSupportedContent"
      )
        span.navbar-toggler-icon

    #navbarSupportedContent.navbar-collapse.collapse.justify-content-end
      ul.navbar-nav
        li.nav-item.dropdown.d-none.d-md-inline-block
          a#navbarDropdownMenuLang.nav-link.dropdown-toggle(
            href="#",
            data-toggle="dropdown",
            aira-haspopup="true",
            aria-expanded="false"
          )
            i.fa.fa-language.mr-1(aria-hidden="true")
            - get_current_language as current_language
            {{ current_language | language_name_local | title }}
          .dropdown-menu(aria-labelledby="navbarDropdownMenuLang")
            {% language_chooser "includes/menu_language.pug" %}

        li.nav-item
          a.nav-link(href="#") {% trans 'Procedures and benefits' %}
        {% show_menu 0 1 100 100 "includes/menu.pug" %}
        li.nav-item
          a.nav-link(href="{% url 'institution_list' %}") {% trans 'Institutions' %}


