extends base.pug

- load i18n
- load staticfiles
- load thumbnail
- load apphooks_config_tags

block content
  section.section.bg-bluedark.elem-bg.hero-background
    .container
      .row
        .col-12.col-lg-5.order-lg-12.col-xl-5
          .pull-md-right
            {% include 'includes/toolbar.pug' %}
        .col-12.col-lg-7
          article.article.article--dark.text-light
            h2.article_title.title--light {% trans 'You are on Gob.cl' %}
            p {% trans 'Your portal to access information of the Government of Chile in a simple and fast way.' %}
            .search-form.search-form--large#searchHero
              .search-form_content
                input(type="search" placeholder="{% trans 'Write here what you want to search'%}").search-form_input.toggle-search
                button(type="submit").search-form_button.search-form_button--submit: i.ic-search
                button(type="button").search-form_button.search-form_button--cancel: i.ic-delete

  section.section.section--small.bg-bluedark.d-none.d-md-block
    .container
      .row
        .col-md-9.col-xl-10
          ul.list-ib
            li {% trans 'Most searched' %}:
            for category in categories
              li
                a.link.link--clean.text-white(
                  href="{% namespace_url 'article-list-by-category' category.slug namespace='aldryn_newsblog_default' default=''%}"
                )
                  {{ category }}
        .col-md-3.col-xl-2.text-right
          a.button.button-small(href="{% url 'about' %}")
            {% trans 'About Chile' %}

  {% include 'includes/social_small.pug' %}
  section
    .container
      if procedures_and_benefits
        section.sub-section
          .row
            .col-12.col-lg-8.col-xl-6
              article.card-new
                h2.heading-medium {% trans 'Procedures and benefits' %}
                p
                  {% trans 'Find out about the main benefits of the State, in addition to the procedures that are carried out in ChileAtiende.' %}
                a(href="tramites.html").card-new_more.d-md-none
                  {% trans 'See more' %}
              article.card-new.d-block.d-md-none
                h2.heading-medium {% trans 'News' %}
                p
                  {% trans 'Find out about our proposals to improve the country and review how they advance.' %}
                a(href="noticias.html").card-new_more.d-md-none
                  {% trans 'See more' %}
              article.card-new.d-block.d-md-none
                h2.heading-medium {% trans 'Institutions' %}
                p
                  {% trans 'Meet the main government entities and their representatives.' %}
                a(href="{% url 'institution_list' %}").card-new_more.d-md-none
                  {% trans 'See more' %}
          .row.d-none.d-md-flex
            .col-12.col-lg-4
              .overflowed-xs
                a(href="#").link.link--text-dark.link--has-dot.visited
                  | Certificación de convertidores catalíticos de reposición
            .col-12.col-lg-4
              .overflowed-xs
                a(href="#").link.link--text-dark.visited
                  | Concurso para inscribir nuevos taxis
            .col-12.col-lg-4
              .overflowed-xs
                a(href="#").link.visited
                  | Certificación de vehículos a gas
          .row
            .col-lg-4.offset-lg-4.d-none.d-md-block
              a(href="#").button.button--block.button--light.button--clean.button--space
                {% trans 'See more' %}

      if articles
        section.sub-section.d-none.d-md-block
          h2.heading-medium {% trans 'News' %}

          {% include 'aldryn_newsblog/includes/article_miniature_list.pug' with articles=articles %}

          .col-12.col-lg-4.offset-lg-4.d-none.d-sm-block
            a.button.button--block.button--light.button--clean.button--space(
              href="{% namespace_url 'article-list' namespace='aldryn_newsblog_default' default=''%}"
            )
              {% trans 'See more' %}

      if ministries_count or public_services_count or regions_count
        section.sub-section.d-none.d-md-block
          .row
            .col-12.col-lg-7
              h2.heading-medium {% trans 'Institutions' %}
              p {% trans 'Know the main government entities and their authorities.' %}
              br
            .col-12
              .row
                .col-md-6.col-lg-3
                  a(href="{% url 'presidency_detail' %}").card-data
                    h2.card-data_title: span {% trans 'Presidency of the Republic' %}
                .col-md-6.col-lg-3
                  a(href="{% url 'institution_list' %}").card-data
                    h3.card-data_title
                      span.card-data_number {{ ministries_count }}
                      span.card-data_title-text {% trans 'Ministries' %}
                .col-md-6.col-lg-3
                  a(href="{% url 'institution_list' %}").card-data
                    h3.card-data_title
                      span.card-data_number {{ public_services_count }}
                      span.card-data_title-text {% trans 'Public Services.' %}
                .col-md-6.col-lg-3
                  a(href="{% url 'institution_list' %}").card-data
                    h3.card-data_title
                      span.card-data_number {{ regions_count }}
                      span.card-data_title-text {% trans 'Regions and their Municipalities.' %}

      if campaigns
        section.sub-section
          h2.heading-medium {% trans 'Campaigns' %}
          {% include 'campaigns/includes/campaign_list.pug' with campaign=campaigns %}

      section.sub-section
        .card-small.d-lg-none
          h5.card-small_title
            a(href="{% url 'about' %}").card-small_link
              | {% trans 'About Chile' %}
              i.ic-arrow-right.icon--right
          .card-small_body
            p {% trans 'Information for tourists, migrants and those who want to study or do business in Chile.' %}
        .row.d-none.d-lg-flex
          .col-md-5.align-self-center
              h5.heading-medium {% trans 'About Chile' %}
              p {% trans 'Information for tourists, migrants and those who want to study or do business in Chile.' %}
              .row
                .col-lg-10
                  a(href="{% url 'about' %}").button.button--block.button--light.button--clean.button--space
                    {% trans 'See more' %}
          .col-md-1
          .col-md-6.align-self-center
            img.img-fluid.w-100.img-frame(src="{% static 'images/about-of.jpg' %}", alt="")
