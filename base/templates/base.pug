doctype 5

- load compress
- load staticfiles
- load i18n static
- load cms_tags
- load sekizai_tags

html(lang="es")
  head
    meta(charset="utf-8")
    title Project {% block title %} {{title}} {%endblock%}
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="http://magnet.cl")

    link(
      href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css",
      rel="stylesheet"
    )
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab")

    //if lte IE 7
      script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

    //if lt IE 9
      script(src="{% static 'bower_components/respond/respond.min.js' %}")
    {% render_block "css" %}
    {% compress css %}
    link(
      type="text/x-scss", rel="stylesheet", href="{% static 'css/bootstrap.scss' %}",
      charset="utf-8"
    )
    link(
      type="text/x-scss", rel="stylesheet", href="{% static 'css/site.scss' %}",
      charset="utf-8"
    )
    {% endcompress %}

    link(
      href="{% static 'eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css' %}",
      rel="stylesheet"
    )

    link(
      href="{% static 'gob.cl/dist/css/gob.cl.css' %}",
      rel="stylesheet"
    )

    {% compress css %}
    block stylesheets
    {% endcompress %}

  body(class='{{body_class|default:""}}')
    {% cms_toolbar %}
    {% placeholder "content" %}
    {% include 'includes/navbar.pug' %}
    //=
      main.site-main
        section.section.bg-bluedark
          .container
            .row
              .col-xs-12.col-sm-12.col-md-5.pull-md-right.col-lg-4.col-lg-offset-1
                {% include 'includes/toolbar.pug' %}
              .col-xs-12.col-sm-12.col-md-7
                article.text-light
                  h2.heading-large Instituciones
                  p Tu guía ciudadana para acceder simple y rápido a servicios e información del Gobierno de Chile.

    div
      div.container
        div.row
          {% if messages %}
          {% for message in messages %}
          div(class="alert alert-{{ message.tags }}") {{ message }}
          {% endfor %}
          {% endif %}
    section.section
      .container
        - if user.is_authenticated
          {% if user.is_staff %}
          a(href="{% url 'admin:index' %}").link.link--dib Administración
          {% endif %}
          a(href="{% url 'user_list' %}").link.link--dib Usuarios
    section.section
      .container
        block content

    {% include 'includes/footer.pug' %}
    // Javascript Placed at the end of the document so the pages load faster
    // uncompressible javascripts
    if not debug
      script(src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
      script(src="https://cdnjs.com/libraries/popper.js")
      script(
        src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js",
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa",
        crossorigin="anonymous"
      )

    block uncompressible_javascripts

    {% compress js %}
    if debug
      script(src="{% static 'jquery/dist/jquery.min.js' %}")
      script(src="{% static 'bootstrap/dist/js/bootstrap.min.js' %}")
      script(src="{% static 'gob.cl/dist/js/gob.cl.js' %}")
    {% endcompress %}

    // templates

    {% compress js %}
    script(type="text/pug", src="{% static 'templates/users/list.pug' %}")
    script(type="text/pug", src="{% static 'templates/users/detail.pug' %}")
    {% endcompress %}

    block javascript_data
    {% render_block "js" %}
    {% compress js %}
    block javascripts
    script(src="{% static 'moment/min/moment-with-locales.min.js' %}")
    script(src="{% static 'eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js' %}")
    script(src="{% static 'js/forms.js' %}")
    {% endcompress %}

