
- load utils
- load thumbnail

if instance.child_plugin_instances
  .gallery
    for a, b, c in instance.child_plugin_instances|group:3
      .gallery-slide
        .img-box
          .gallery-image(
            style="background-image: url({% thumbnail a.image 300x300  %})",
            data-mfp-src="{{ a.image.url }}"
            data-text="{{ a.caption }}"
          )
        .img-box
          .gallery-image(
            style="background-image: url({% thumbnail b.image 300x300  %})",
            data-mfp-src="{{ b.image.url }}"
            data-text="{{ b.caption }}"
          )
        .img-box
          .gallery-image(
            style="background-image: url({% thumbnail c.image 300x300  %})",
            data-mfp-src="{{ c.image.url }}"
            data-text="{{ c.caption }}"
          )
